<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <h1>Cocktail Form</h1>

      <%= simple_form_for(@cocktail) do |f| %>
        <%= f.input :name %>
        <%= f.button :submit %>
        <%= link_to 'Back to Cocktail list', cocktails_path, class: 'btn btn-warning' %>
      <% end %>
    </div>
  </div>
</div>
