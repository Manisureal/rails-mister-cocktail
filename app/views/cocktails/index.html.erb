<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.unsplash.com/photo-1490324120634-0fa86c62d6c1?auto=format&fit=crop&w=2118&q=80&ixid=dW5zcGxhc2guY29tOzs7Ozs%3D');">
  <div class="banner-content">
    <h1>Welcome to Mister Cocktail...</h1>
    <p>You know your Mrs would love one</p>
    <%= link_to 'Pick A Random Cocktail', cocktail_path(@cocktails.ids.shuffle.first), class: 'btn btn-primary btn-lg' %>
  </div>
</div>

<div class="container">




  <div class="row text-center">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-4">
        <%= link_to cocktail_path(cocktail) do %>
          <div class="card">
            <h3><%= cocktail.name %></h3>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="center-block">
    <%= link_to 'Add a new Cocktail', new_cocktail_path, class: 'btn btn-primary' %>
  </div>
</div>
