<div class="container">
  <h1>Welcome to Mister Cocktail...</h1>

  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-4">
        <%= link_to cocktail_path(cocktail) do %>
          <div class="card">
            <h3><%= cocktail.name %></h3>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <%= link_to 'Add a new Cocktail', new_cocktail_path, class: 'btn btn-primary' %>
</div>
